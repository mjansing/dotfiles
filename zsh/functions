# create folder and switch into it
function take {
  mkdir $1
  cd $1
}

function jump {
  cd ~/work/code/$1
}

# creates and switches to a new tmux session
function start {
  tmux new -d -s $1
  tmux switch -t $1
}

# stops current tmux session and switches to dev
function stop {
  session=`tmux display-message -p "#S"`

  tmux switch -t dev
  tmux kill-session -t $session
}