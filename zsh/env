# contains values used by other scripts and applications

# set default editor to atom
export EDITOR="vim"

export LANG=en_US.UTF-8

# add syntax highlighting
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# add autosuggestions
source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh

# necessary for chruby
source /usr/local/opt/chruby/share/chruby/chruby.sh
source /usr/local/share/chruby/auto.sh

# use dev-mode to speed up jvm startup
export JRUBY_OPTS=--dev

# set default java
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk-11.0.4.jdk/Contents/Home"

# set default ruby
chruby ruby-2.6.3

# fnm
eval "$(fnm env --multi)"

# add postgresapp to path
export PATH="/Applications/Postgres.app/Contents/Versions/latest/bin:$PATH"

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# add yarn to path
export PATH="$PATH:$HOME/.yarn/bin"

# add newer curl
export PATH="/usr/local/opt/curl/bin:$PATH"

# set default theme
base16_default-dark
