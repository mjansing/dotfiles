# contains values used by other scripts and applications

# add ~/dotfiles/bin directory to path
export PATH=$PATH:~/dotfiles/bin

# set default editor to sublime
export EDITOR="subl"

# show custom prompt with vc
setopt prompt_subst
export PS1='%c %{$fg[green]%}$(vcprompt -f "[%b:%a%m%u]")%{$reset_color%}$ '


# necessary for chruby
source /usr/local/opt/chruby/share/chruby/chruby.sh
source /usr/local/share/chruby/auto.sh

# use ruby 1.9 mode with jruby 1.6.8
export JRUBY_OPTS=--1.9


# PROMPT='%3~$(git_prompt_info)%# 